# DES Demo Environment Configuration
# Copy this file to .env and customize as needed

# PostgreSQL Configuration
POSTGRES_DB=business_system
POSTGRES_USER=business_user
POSTGRES_PASSWORD=business_pass
POSTGRES_PORT=5432

# MinIO Configuration (S3 Compatible)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
S3_BUCKET=des-bucket

# DES API Configuration
DES_API_PORT=8000
DES_API_HOST=0.0.0.0

# Business System Configuration
BUSINESS_SYSTEM_PORT=8080
BUSINESS_SYSTEM_HOST=0.0.0.0

# Default Retention Settings
DEFAULT_RETENTION_DAYS=90
EXTENDED_RETENTION_DEFAULT_DAYS=365

# S3 Endpoint Configuration
# For demo: http://minio:9000
# For AWS: https://s3.amazonaws.com
# For custom: https://your-s3-endpoint.com
S3_ENDPOINT=http://minio:9000

# Logging
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# Demo Data
LOAD_SAMPLE_DATA=true
SAMPLE_CASES_COUNT=3
SAMPLE_FILES_COUNT=3
